<Page
    x:Class="FamilyMoney.UWP.Views.Transactions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FamilyMoney.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bases="using:FamilyMoneyLib.NetStandard.Bases"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Label="New Transaction" Icon="Add" Click="AppBarButton_Click" />

            <AppBarSeparator />
            <AppBarButton Label="Transactions" Icon="Calculator" Click="AppBarButton_Click_1" />
            <AppBarButton Label="Accounts" Icon="Folder" Click="AppBarButton_Click_2" />
            <AppBarButton Label="Categories" Icon="Bookmarks" Click="AppBarButton_Click_3" />
            <AppBarButton Label="Report" Icon="ViewAll" />

            <CommandBar.Content>
                <TextBlock Text="{x:Bind ViewModel.CurrentInfo}" />
            </CommandBar.Content>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <StackPanel>
            <ComboBox Header="Account"
                      x:Name="CbAccount"
                      ItemsSource="{x:Bind ViewModel.Accounts}"
                      HorizontalAlignment="Stretch" SelectionChanged="CbAccount_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="bases:IAccount">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                            <TextBlock Text="{Binding Currency}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ListView Header="Transactions"
                      x:Name="LvTransactions"
                      ItemsSource="{x:Bind ViewModel.Transactions}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="bases:ITransaction">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="300" />
                                <ColumnDefinition Width="60" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{x:Bind Timestamp.DayOfYear}" />
                            <TextBlock Grid.Column="1" Text="{x:Bind Name}" />
                            <TextBlock Grid.Column="2" Text="{x:Bind Total}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>